# Environment Template for Railway Deployment
# Copy these variables to Railway's environment settings

# Required: OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Anthropic API Key
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Required: MongoDB Connection
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/skillforge_ai?retryWrites=true&w=majority

# Application Settings
DEBUG=False
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO

# AI Model Configuration
MODEL_VERSION=gpt-4o-mini
MAX_TOKENS=1200
TEMPERATURE=0.3

# Database Configuration
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/skillforge_ai
VECTOR_DB_PATH=./data/vectordb

# CrewAI Configuration
CREW_MAX_AGENTS=10
TASK_TIMEOUT=300
WORKFLOW_MAX_STEPS=50

# Production Settings
PYTHONPATH=/app
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1
